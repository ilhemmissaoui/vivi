                <script>
                    tinymce.init({
                        selector: 'textarea',
                        plugins: "emoticons",
                        max_chars: 30,
                        toolbar: "emoticons",
                        toolbar_location: "bottom",
                        entity_encoding : "raw"
                    });
                </script>

{% endblock %}
