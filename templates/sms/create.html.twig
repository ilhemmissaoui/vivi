                            <div class="box-body  container-fluid">
                                <div class="sonata-ba-collapsed-fields">
                                    <form method="post" action="{{ path('smsStatistics_create') }}">

                                    <div class="row">
                                        <div class="col-md-12">
                                            <label for="client">client</label>
                                            <select id="search" multiple="true" name="client[]">
                                                {% for client in clients %}
                                                    <option value="{{ client.phone }}">
                                                        {{ client.firstname }}-{{ client.lastname }}-{{ client.phone }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-lg-12">
                                            <label for="client">message</label>
                                            <textarea class="form-control" name="message" rows="4" cols="50"></textarea>
                                            <input type="hidden" name="type" value="single"/>

                                        </div>
                                    </div>
                                        <div class="modal-footer">
                                            <button type="submit" class="btn btn-primary">valider</button>
                                            <button type="cancel" class="btn btn-secondary">annuler</button>

                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    <div class="tab-pane fade" id="tab_s61f41facf1fac_73804619_2">
                        <div class="box-body  container-fluid">
                            <div class="sonata-ba-collapsed-fields">
                                <form method="post" action="{{ path('smsStatistics_create') }}">

                                <div class="row">
                                    <div class="col-md-12">
                                        <input type="hidden" name="type" value="all"/>
                                    </div>
                                    <div class="col-lg-12">
                                        <label for="client">message</label>
                                        <textarea class="form-control" name="message" rows="4" cols="50"></textarea>
                                    </div>
                                </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">valider</button>
                                        <button type="cancel" class="btn btn-secondary">annuler</button>

                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>

    </div>
