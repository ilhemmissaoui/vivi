{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block sonata_nav %}{% endblock sonata_nav %}

{% block logo %}{% endblock logo %}

{% block sonata_left_side %}{% endblock sonata_left_side %}

{% block body_attributes %}class="sonata-bc login-page"
{% endblock %}

{% block sonata_wrapper %}

	<style>
		.login-box-msg {
			font-size: 14px;
			margin: 0;
			text-align: center;
			padding: 30px 0 20px;
			text-transform: uppercase;
			color: white;
			font-weight: 600;
		}
		.login-box-body {
			background: transparent;
		}
		.form-group.has-feedback .form-control {
			border-radius: 20px !important;
		}
		.login-page {
			background-image: url('/images/bgAdmin.png') !important;
			background-size: cover;
			background-position: center;
			height: auto;
			min-height: 100%;
		}
		button.btn.btn-primary.btn-block.btn-flat {
			background-color: #ffd101 !important;
			border-color: #ffd101 !important;
			color: #151b34 !important;
			border-radius: 25px !important;
			font-weight: bold !important;
			font-size: small !important;
			text-transform: uppercase !important;
			width: max-content !important;
			margin: auto;
		}
	</style>
	<div class="login-box">
		<div class="login-logo">
			<a href="/admin/dashboard">
				<div>
					<img style="width:125px;" src="{{ asset('images/logoAdmin.png') }}" alt="Administration Vivitools">
				</div>
				<p class="login-box-msg">ESPACE ADMIN</p>
			</a>
		</div>
		<div class="login-box-body">
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				<div class="form-group has-feedback">
					<input type="text" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" required autofocus placeholder="Nom d'utilisateur">

					<span class="glyphicon glyphicon-user form-control-feedback"></span>
				</div>
				<div class="form-group has-feedback">
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Mot de passe">
				
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
				</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="row">

					<div class="col-12 text-center">
						<button type="submit" class="btn btn-primary btn-block btn-flat">Connexion</button>
					</div>
				</div>
			</form>
		</div>
	</div>

{% endblock %}
