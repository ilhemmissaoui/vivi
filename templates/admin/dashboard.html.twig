{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block title %}{{ 'title_dashboard'|trans({}, 'SonataAdminBundle') }}{% endblock %}
{% block breadcrumb %}{% endblock %}
{% block content %}

    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Bienvenue !</h3>
        </div>
        <div class="box-body">
            <p>Vous êtes authentifié en tant que <strong>{{ app.user.username }}</strong></p>
            <a href="{{ url('admin_logout') }}" class="btn btn-default btn-flat">
                <i class="fa fa-sign-out fa-fw"></i> Déconnexion
            </a>
        </div>
    </div>

{% endblock %}
